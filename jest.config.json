{
  "clearMocks": true,
  "resetMocks": true,
  "restoreMocks": true,
  "resetModules": true,
  "errorOnDeprecated": true,

  "testEnvironment": "node",
  "testMatch": [
    "**/test/unit-tests/**/*.unit-test.ts"
  ],
  "setupFiles": ["<rootDir>/src/utils/loadEnv.ts"],
  "transform": {
    "^.+\\.[t|j]sx?$": "ts-jest"
  }
}